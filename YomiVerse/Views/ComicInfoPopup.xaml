<Toolkit:Popup
    x:Class="YomiVerse.Views.ComicInfoPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    HorizontalOptions="Center"
    VerticalOptions="Center">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Image x:Name="ComicImage" HeightRequest="200" />
        <Label
            x:Name="TitleLabel"
            FontAttributes="Bold"
            FontSize="18" />
        <Label x:Name="DescLabel" FontSize="14" />
        <Button x:Name="AddToLibraryButton" Clicked="OnAddToLibraryClicked" />
    </VerticalStackLayout>
</Toolkit:Popup>
